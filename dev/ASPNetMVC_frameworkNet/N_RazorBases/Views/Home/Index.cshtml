@{
    ViewBag.Title = "Ma Page";
    ViewBag.Coucou = "Hello !";
}

@{
    var i = 122;
    var div1 = "<div style=\"background-color:red;width:150px;height:150px\"></div>";
    var div2 = "<div style=\"background-color:green;width:50px;height:50px\"></div>";
}

@{
    if (i % 2 == 0)
    {
        @Html.Raw(div1) 
        <text>Carré rouge</text>
        @* i++; *@
    }
    if (i > 100)
    {
        @Html.Raw(div2)<text>Carré vert</text>
    }
    for(int j=0; j< 10; j++) { @j <br/> }

}

