                <div class="checkbox">
                    @Html.EditorFor(model => model.Fait)
                    @Html.ValidationMessageFor(model => model.Fait, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
